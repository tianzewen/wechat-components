.page {
  position: fixed;
  top: 0rpx;left: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;width: 100%;
  background: rgba(31, 31, 31, 0.6);
}

.modal {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 25%;
  width: 85%;
  background: #FFFFFF;
  border-radius: 14rpx;
  overflow: hidden;
}

.title {
  padding-top: 40rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #1F1F1F;
  letter-spacing: 0.59rpx;
}

.content {
  padding: 27rpx 34rpx 40rpx;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0.49rpx;
}

.action-box {
  display: flex;
  align-items: center;
  height: auto;width: 100%;
}

.cancel-btn,.confirm-btn,.default-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #000;
  letter-spacing: 0.52rpx;
  border-radius: 0rpx;
  border-top: 1rpx solid #EDEDED;
  background-color: #fff;
}

.border-left {
  border-left: 1rpx solid #EDEDED;
}