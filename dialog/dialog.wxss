.dialog {
  position: fixed;
  top: 0rpx;left: 0rpx;
  height: 100vh;width: 100%;
}

.bg {
  animation: fade-in .3s linear;
  animation-fill-mode: forwards;
}

.position {
  position: relative;
}

.show {
  display: block;
}

.hide {
  display: none;
}

@keyframes fade-in {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}